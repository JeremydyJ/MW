from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# 启动浏览器
driver = webdriver.Chrome()
driver.get("https://u13.kingmidasdev.net/portal/login")
driver.maximize_window()

# 登录流程
WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.NAME, "user")))
driver.find_element(By.NAME, "user").send_keys("jeremydythbtester01")
driver.find_element(By.NAME, "user").submit()

# 等待跳转完成
WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.XPATH, "//*[contains(text(), 'Currency')]")))
print("✅ 登录成功")

# 查找 Andar Bahar 游戏按钮并点击
try:
    andar_bahar_button = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'Andar Bahar')]"))
    )
    andar_bahar_button.click()
    print("✅ 已点击 Andar Bahar 游戏")

    # 等待新窗口打开
    WebDriverWait(driver, 10).until(lambda d: len(d.window_handles) > 1)
    driver.switch_to.window(driver.window_handles[1])  # 切换到新窗口

    # 等待游戏页面加载完成的某个特征（示例）
    WebDriverWait(driver, 10).until(
        EC.presence_of_element_located((By.XPATH, "//*[contains(text(), 'Andar Bahar')]"))
    )
    print("✅ 游戏页面加载成功")

except Exception as e:
    print(f"❌ 点击或加载失败：{e}")

# 等待几秒后退出
time.sleep(5)
driver.quit()
